<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/basket_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/showcase_list"
        app:layout_constraintTop_toTopOf="parent">

        <ListView
            android:id="@+id/basket_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@color/colorPrimary"
            android:paddingStart="@dimen/padding"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSecondary"
            android:gravity="center">

            <EditText
                android:id="@+id/add_item_field"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/item_name"
                android:inputType="text"
                android:visibility="visible"
                android:lines="1"/>

            <Button
                android:id="@+id/add_item_btn"
                android:layout_width="@dimen/ic_categ_size"
                android:layout_height="@dimen/ic_categ_size"
                android:layout_margin="@dimen/padding"
                android:background="@drawable/add_btn_bg"
                android:onClick="onAddBtnClick"
                android:visibility="visible"/>

            <Button
                android:id="@+id/clear_btn"
                android:layout_width="@dimen/ic_categ_size"
                android:layout_height="@dimen/ic_categ_size"
                android:layout_margin="@dimen/padding"
                android:background="@drawable/del_btn_bg"
                android:onClick="onClearBtnClick"/>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/categories_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/padding"
        android:paddingBottom="@dimen/padding"
        android:background="@color/colorSecondary">

        <include
            layout="@layout/categories_layout"
            app:layout_constraintEnd_toStartOf="@+id/showcase_list"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"/>
    </ScrollView>

    <ListView
        android:id="@+id/showcase_list"
        android:layout_width="@dimen/showcase_wide_size"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:divider="@color/colorPrimary"
        android:padding="@dimen/padding"
        app:layout_constraintEnd_toStartOf="@+id/basket_container"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/categories_wrapper"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>