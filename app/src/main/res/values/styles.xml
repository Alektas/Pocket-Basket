<resources>
    <style name="Theme.Main" parent="Theme.Base"/>

    <style name="Theme.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorPrimarySurface">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="bottomAppBarStyle">@style/Widget.AppBar</item>
        <item name="android:searchViewStyle">@style/Widget.SearchView</item>
    </style>

    <style name="Theme.Main.Splash" parent="Theme.Base.Splash"/>

    <style name="Theme.Base.Splash">
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="ThemeOverlay.SearchView" parent="">
        <item name="android:colorControlNormal">?colorSecondary</item>
        <item name="android:colorControlActivated">?colorOnPrimary</item>
        <item name="android:colorControlHighlight">?colorOnPrimary</item>
        <item name="android:editTextColor">?colorOnPrimary</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textColorHint">@color/colorHintOnPrimary</item>
    </style>

    <style name="Widget.AppBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryHint">@string/search_hint</item>
        <item name="android:queryBackground">@drawable/bg_searchview</item>
        <item name="android:searchIcon">@null</item>
        <item name="android:submitBackground">@null</item>
        <item name="android:voiceIcon">@drawable/ic_keyboard_voice_white_24dp</item>
        <item name="android:closeIcon">@drawable/ic_close_white_24dp</item>
    </style>

    <style name="Widget.CategoryButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_categ_icon</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_8</item>
        <item name="android:textSize">@dimen/textsize_category</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">0</item>
        <item name="android:buttonTint">@color/colorOnPrimary</item>
        <item name="android:background">@drawable/bg_categ</item>
        <item name="android:stateListAnimator">@animator/anim_category_selection</item>
        <item name="android:onClick">onFilterClick</item>
    </style>

    <style name="Widget.Hint" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:visibility">invisible</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_margin">32dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/textsize_guide_hint</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:onClick">onHintClick</item>
    </style>

    <style name="Widget.Guide.Text.Main.Light" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_16</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/textsize_guide</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

</resources>
