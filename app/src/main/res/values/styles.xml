<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AppBar" parent="AppTheme">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/lb_search_plate_hint_text_color</item>
    </style>

    <style name="CategButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ic_categ_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/padding_8</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/categ_bg</item>
        <item name="android:onClick">onFilterClick</item>
    </style>

</resources>
