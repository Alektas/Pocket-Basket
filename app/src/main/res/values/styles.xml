<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AppBar" parent="AppTheme">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/lb_search_plate_hint_text_color</item>
    </style>

    <style name="CategButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_categ_icon</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_8</item>
        <item name="android:textSize">@dimen/textsize_category</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">0</item>
        <item name="android:background">@drawable/bg_categ</item>
        <item name="android:stateListAnimator">@animator/anim_category_selection</item>
        <item name="android:onClick">onFilterClick</item>
    </style>

    <style name="Hint" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:visibility">invisible</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_margin">32dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:backgroundTint">@color/bg_guide_hint</item>
        <item name="android:onClick">onHintClick</item>
    </style>

    <style name="GuideTextMainLight">
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_16</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/textsize_guide</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
