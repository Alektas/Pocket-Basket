<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@color/colorTextDark</item>
        <item name="android:colorBackground">@color/bg_main</item>
        <item name="colorOnBackground">@color/colorTextDark</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppBar" parent="AppTheme">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">@dimen/textsize_appbar</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryHint">@string/search_hint</item>
        <item name="android:queryBackground">@drawable/shape_search_view_query</item>
        <item name="android:searchIcon">@null</item>
        <item name="android:submitBackground">@null</item>
    </style>

    <style name="CategButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_categ_icon</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_8</item>
        <item name="android:textSize">@dimen/textsize_category</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">0</item>
        <item name="android:buttonTint">@android:color/white</item>
        <item name="android:background">@drawable/bg_categ</item>
        <item name="android:stateListAnimator">@animator/anim_category_selection</item>
        <item name="android:onClick">onFilterClick</item>
    </style>

    <style name="Hint" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:visibility">invisible</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_margin">32dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/textsize_guide_hint</item>
        <item name="android:backgroundTint">@color/bg_guide_hint</item>
        <item name="android:onClick">onHintClick</item>
    </style>

    <style name="GuideTextMainLight">
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_16</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/textsize_guide</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
