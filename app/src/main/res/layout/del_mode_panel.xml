<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/colorPrimaryLight"
              android:gravity="center"
              android:animateLayoutChanges="true"
              style="?android:attr/buttonBarStyle">

    <Button
        android:layout_width="@dimen/ic_categ_size"
        android:layout_height="@dimen/ic_categ_size"
        android:layout_margin="@dimen/padding_8"
        android:background="@drawable/ic_delete_forever_white_24dp"
        style="?android:attr/buttonBarButtonStyle"
        android:onClick="onDelDmBtnClick"/>

    <Button
        android:id="@+id/cancel_dm_btn"
        android:layout_width="@dimen/ic_categ_size"
        android:layout_height="@dimen/ic_categ_size"
        android:layout_margin="@dimen/padding_8"
        android:background="@drawable/ic_close_white_24dp"
        style="?android:attr/buttonBarButtonStyle"
        android:onClick="onCancelDmBtnClick"/>

</LinearLayout>