<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_widget_item">

    <ImageView
        android:id="@+id/widget_item_icon"
        android:layout_width="@dimen/size_widget_item_icon_small"
        android:layout_height="@dimen/size_widget_item_icon_small"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_widget_item_icon_small"
        android:padding="@dimen/padding_widget_ic_small"
        android:src="@drawable/ic_launcher_foreground"/>

    <TextView
        android:id="@+id/widget_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/widget_item_icon"
        android:layout_centerVertical="true"
        android:layout_marginEnd="2dp"
        android:text="@string/widget_loading_long"
        android:textSize="@dimen/textsize_widget_item_name_small"/>

    <ImageButton
        android:id="@+id/widget_btn_del"
        android:layout_width="@dimen/size_widget_item_icon_small"
        android:layout_height="@dimen/size_widget_item_icon_small"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:elevation="4dp"
        android:padding="@dimen/padding_widget_ic"
        android:layout_margin="@dimen/margin_widget_item_icon_small"
        android:adjustViewBounds="true"
        android:background="@drawable/shape_widget_btn_del"
        android:tint="@color/colorOnPrimary"
        android:src="@drawable/ic_delete_forever_white_24dp"/>

    <FrameLayout
        android:id="@+id/widget_item_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_item_ripple"/>

</RelativeLayout>