<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/basket_container"
        android:layout_width="@dimen/basket_narrow_size"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/showcase_list"
        app:layout_constraintTop_toTopOf="parent">

        <ListView
            android:id="@+id/basket_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <include
            android:id="@+id/basket_tools_panel"
            layout="@layout/basket_tools_panel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/showcase_list"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/categories_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:fillViewport="true"
        android:paddingTop="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_8"
        app:layout_constraintEnd_toStartOf="@+id/showcase_list"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/categ_group"
            layout="@layout/categories_layout"/>
    </ScrollView>

    <ListView
        android:id="@+id/showcase_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLight"
        android:divider="@color/colorPrimaryLight"
        app:layout_constraintBottom_toTopOf="@+id/del_mode_panel"
        app:layout_constraintEnd_toStartOf="@+id/basket_container"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/categories_wrapper"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintVertical_chainStyle="packed"/>

    <include
        android:id="@+id/del_mode_panel"
        layout="@layout/del_mode_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/showcase_list"
        app:layout_constraintStart_toStartOf="@+id/showcase_list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>