            android:button="@drawable/ic_rb_oil"
            android:onClick="onFilterClick"/>
        <RadioButton
            android:id="@+id/household_rb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/categ_ic_size"
            android:layout_weight="1"
            android:text="@string/household"
            android:background="@drawable/categ_bg"
            android:button="@drawable/ic_rb_household"
            android:onClick="onFilterClick"/>
        <RadioButton
            android:id="@+id/other_rb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/categ_ic_size"
            android:layout_weight="1"
            android:text="@string/other"
            android:background="@drawable/categ_bg"
            android:button="@drawable/ic_more_horiz_black_24dp"
            android:onClick="onFilterClick"/>
