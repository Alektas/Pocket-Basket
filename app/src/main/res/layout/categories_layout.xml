            android:background="@drawable/categ_bg"
            android:onClick="onFilterClick"/>
        <RadioButton
            android:id="@+id/meat_rb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/categ_ic_size"
            android:layout_weight="1"
            android:text="@string/meat"
            android:background="@drawable/categ_bg"
            android:button="@drawable/ic_rb_meat"
            android:onClick="onFilterClick"/>
        <RadioButton
            android:id="@+id/seafood_rb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/categ_ic_size"
            android:layout_weight="1"
            android:text="@string/seafood"
            android:background="@drawable/categ_bg"
            android:button="@drawable/ic_rb_fish"
            android:onClick="onFilterClick"/>
        <RadioButton
            android:id="@+id/semis_rb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/categ_ic_size"
