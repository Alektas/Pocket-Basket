<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="alektas.pocketbasket.db.entity.Item"/>

        <variable
            name="model"
            type="alektas.pocketbasket.viewmodel.ItemsViewModel"/>
    </data>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/basket_item_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:background="@color/item_bg">

        <include layout="@layout/item_content"
                 android:id="@+id/item_content"
                 app:item="@{item}"
                 app:model="@{model}"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/item_height"
                 android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/drag_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_16"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_drag_handle_darkgreen_24dp"/>

    </RelativeLayout>
</layout>